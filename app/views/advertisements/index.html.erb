<h1>Listing advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Campaigns</th>
      <th>Price</th>
      <th>Payment</th>
      <th>Point</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.campaigns %></td>
        <td><%= advertisement.price %></td>
        <td><%= advertisement.payment %></td>
        <td><%= advertisement.point %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertisement', new_advertisement_path %>
