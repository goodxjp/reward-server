<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-sm-1">ID</th>
      <th class="col-sm-6">名前</th>
      <th class="col-sm-1">状態</th>
      <th class="col-sm-2">登録日時</th>
      <th class="col-sm-2 text-center"></th>
    </tr>
  </thead>

  <tbody>
    <% @networks.each do |network| %>
    <tr>
      <td><%= network.id %></td>
      <td><%= network.name %></td>
      <td class="text-center"><span class="label label-success">有効</span></td>
      <td><%= network.created_at.in_time_zone("Asia/Tokyo").strftime("%Y-%m-%d %H:%M:%S") %></td>

      <td class="text-center">
        <div class="btn-group">
          <%= link_to edit_network_path(network), class: 'btn btn-default' do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <div class="btn-group">
            <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu pull-right">
              <li><a href="#">レポート</a></li>
            </ul>
          </div>
        </div>
      </td>
    </tr>
    <% end %>

    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td class="text-center">
        <%= link_to '新規登録', new_network_path, :class => 'btn btn-default' %>
      </td>
    </tr>
  </tbody>
</table>
