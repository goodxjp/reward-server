<section class="content-header">
  <h2>ログイン</h2>
</section>

<section class="content">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :horizontal_form, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.input :email, label: 'メールアドレス',
      input_wrapper_html: { class: 'col-sm-6' },
      required: false, autofocus: true %>
  <%= f.input :password, label: 'パスワード',
      input_wrapper_html: { class: 'col-sm-6' },
      required: false %>
  <%# f.input :remember_me, label: 'Remember me',
      input_wrapper_html: { class: 'col-sm-1' },
      as: :boolean if devise_mapping.rememberable? %>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-4">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "admin_users/shared/links" %>
</section>

