<section class="content-header">
  <h2>ユーザー一覧</h2>
</section>

<section class="content">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-sm-1">ID</th>
        <th class="col-sm-2">端末 ID</th>
        <th class="col-sm-2">端末情報</th>
        <th class="col-sm-2">Android 登録 ID</th>
        <th class="col-sm-1">状態</th>
        <th class="col-sm-2">登録日時</th>
        <th class="col-sm-2 text-center"></th>
      </tr>
    </thead>

    <tbody>
      <% @media_users.each do |media_user| %>
      <tr>
        <td><%= media_user.id %></td>
        <td><%= truncate(media_user.terminal_id, :length => 30) %></td>
        <td><%= truncate(media_user.terminal_info, :length => 30) %></td>
        <td><%= truncate(media_user.android_registration_id, :length => 50) %></td>
        <td class="text-center"><span class="label label-success">有効</span></td>
        <td><%= media_user.created_at.in_time_zone("Asia/Tokyo").strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td class="text-center">
          <div class="btn-group">
            <%= link_to media_user, class: 'btn btn-default' do %>
              <i class="fa fa-book"></i>
            <% end %>
            <div class="btn-group">
              <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu pull-right">
                <li>
                  <%= link_to media_user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    削除
                  <% end %>
                <li>
                  <%= link_to({ :controller => 'media_users', :action => 'notify', :id => media_user.id }, method: 'post') do %>
                    通知テスト
                  <% end %>
              </ul>
            </div><!-- /.btn-group -->
          </div><!-- /.btn-group -->
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

