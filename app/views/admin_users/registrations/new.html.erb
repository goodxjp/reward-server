<section class="content-header">
  <h2>ユーザー登録</h2>
</section>

<section class="content">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, label: 'メールアドレス',
      input_wrapper_html: { class: 'col-sm-6' },
      required: true, autofocus: true %>
  <%= f.input :password, label: 'パスワード',
      input_wrapper_html: { class: 'col-sm-6' },
      required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
  <%= f.input :password_confirmation, label: 'パスワード確認',
      input_wrapper_html: { class: 'col-sm-6' },
      required: true %>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-4">
      <%= f.submit '登録', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "admin_users/shared/links" %>
