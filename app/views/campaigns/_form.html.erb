<%= simple_form_for @campaign, wrapper: :horizontal_form, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-input">
    <%= f.input :name, label: 'キャンペーン名',
        input_wrapper_html: { class: 'col-xs-8' } %>
    <%= f.input :detail, label: '詳細',
        input_wrapper_html: { class: 'col-xs-8' } %>
    <%= f.input :icon_url, label: 'アイコン',
        input_wrapper_html: { class: 'col-xs-8' } %>

    <%= f.simple_fields_for @advertisement do |a| %>
      <%= a.input :price, label: '金額',
          input_wrapper_html: { class: 'col-xs-3' }, placeholder: 'キャンペーン実行にかかる金額' %>
      <%= a.input :payment, label: '報酬',
          input_wrapper_html: { class: 'col-xs-3' }, placeholder: 'ネットワークから支払われる金額' %>
      <%= a.input :point, label: 'ポイント',
          input_wrapper_html: { class: 'col-xs-3' } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>
