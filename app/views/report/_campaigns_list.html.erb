<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-sm-1">ID</th>
      <th class="col-sm-2">ネットワーク</th>
      <th class="col-sm-1">アイコン</th>
      <th class="col-sm-3">名称</th>

      <th class="col-sm-1">件数</th>
      <th class="col-sm-1">売上</th>
      <th class="col-sm-1">消費税</th>
      <th class="col-sm-1">発行ポイント</th>
      <th class="col-sm-1">利益</th>
    </tr>
  </thead>

  <tbody>
    <% @report_data.each do |row| %>
    <% campaign = row[:campaign] %>
    <tr>
      <td><%= campaign.id %></td>
      <td>
        <%= campaign.campaign_source.name %>
      </td>
      <td><%= image_tag campaign.icon_url, :size => '57x57' %></td>
      <td><%= campaign.name %></td>
      <td class="text-right"><%= number_with_delimiter(row[:count]) %></td>
      <td class="text-right"><%= number_with_delimiter(row[:payment_excluding_tax]) %></td>
      <td class="text-right"><%= number_with_delimiter(row[:payment_consumption_tax]) %></td>
      <td class="text-right"><%= number_with_delimiter(row[:published_point]) %></td>
      <td class="text-right"><%= number_with_delimiter(row[:profit]) %></td>
    </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>
