<section class="content-header">
  <h2>キャンペーン詳細</h2>
</section>

<!--
<p id="notice"><%= notice %></p>
-->

<section class="content">
  <div class="box box-default">
    <div class="box-header with-border">
       <h3 class="box-title">基本情報</h3>
    </div>
    <div class="box-body">
      <!-- http://qiita.com/zaburo/items/8983993d173c51cb3827 -->
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-md-4 control-label">
            ソース
          </label>
          <div class="col-md-8">
            <p class="form-control-static">
              <% if not @source.nil? %>
              <%= link_to '詳細', @source, class: 'btn btn-default btn-xs' %>
              <% end %>
            </p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">
            <%= Campaign.human_attribute_name('id') %>
          </label>
          <div class="col-md-8">
            <div class="form-control"><%= @campaign.id %></div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">
            アイコン
          </label>
          <div class="col-md-8">
            <%= image_tag @campaign.icon_url, :size => '57x57' %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">
            <%= Campaign.human_attribute_name('name') %>
          </label>
          <div class="col-md-8">
            <div class="form-control"><%= @campaign.name %></div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">
            <%= Campaign.human_attribute_name('payment') %>
          </label>
          <div class="col-md-8">
            <div class="form-control"><%= @campaign.payment %></div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-4 control-label">
            <%= Campaign.human_attribute_name('point') %>
          </label>
          <div class="col-md-8">
            <div class="form-control"><%= @campaign.point %></div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

