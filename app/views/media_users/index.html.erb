<section class="content-header">
  <h2>ユーザー一覧</h2>
</section>

<section class="content">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="col-sm-1">ユーザー ID</th>
        <th class="col-sm-3">端末 ID</th>
        <th class="col-sm-4">端末情報</th>
        <th class="col-sm-3">Android 登録 ID</th>
        <th class="col-sm-1"></th>
      </tr>
    </thead>

    <tbody>
      <% @media_users.each do |media_user| %>
      <tr>
        <td><%= media_user.id %></td>
        <td><%= truncate(media_user.terminal_id, :length => 30) %></td>
        <td><%= truncate(media_user.terminal_info, :length => 30) %></td>
        <td><%= truncate(media_user.android_registration_id, :length => 50) %></td>
        <td><%= link_to '', media_user, method: :delete, data: { confirm: 'Are you sure?' },
                class: 'btn btn-default glyphicon glyphicon-trash' %>
            <%= link_to '', { :controller => 'media_users', :action => 'notify', :id => media_user.id },
                method: 'post', class: 'btn btn-default glyphicon glyphicon-phone-alt' %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>

