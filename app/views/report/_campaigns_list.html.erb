<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="col-sm-1">ID</th>
      <th class="col-sm-2">ネットワーク</th>
      <th class="col-sm-1">アイコン</th>
      <th class="col-sm-3">名称</th>

      <th class="col-sm-1">件数</th>
      <th class="col-sm-1">売上</th>
      <th class="col-sm-1">消費税</th>
      <th class="col-sm-1">発行ポイント</th>
      <th class="col-sm-1">利益</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <% campaign = report[:campaign] %>
    <tr>
      <td><%= campaign.id %></td>
      <td>
        <%= campaign.campaign_source.name %>
      </td>
      <td><%= image_tag campaign.icon_url, :size => '57x57' %></td>
      <td><%= campaign.name %></td>
      <td class="text-right"><%= report[:count] %></td>
      <td class="text-right"><%= report[:payment] %></td>
      <td class="text-right"><%= report[:tax] %></td>
      <td class="text-right"><%= report[:published_point] %></td>
      <td class="text-right"><%= report[:profit] %></td>
    </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>
</table>
